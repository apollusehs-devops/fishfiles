#!/usr/bin/env sh

if which toilet 2>/dev/null >/dev/null; then
  INDENT=$(echo $(tput cols) / 2 - 15 | bc)
  SPACES=$(printf %${INDENT}s)
  echo ""
  echo ""
  echo ""
  echo ""
  date +" %H:%M %p " | toilet -f future -F border --metal | sed -s "s/^/$SPACES/g"
  echo ""
  echo ""
  echo ""
  echo ""
fi
